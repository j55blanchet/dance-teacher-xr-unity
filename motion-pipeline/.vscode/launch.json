    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Quick Script",
            "type": "python",
            "request": "launch",
            "module": "motion_extraction.quickscript",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "VideoPipeline (1): Get MP Holistic Data",
            "type": "python",
            "request": "launch",
            "module": "motion_extraction.stepone_get_holistic_data",
            "justMyCode": true,
            "args": [
                "--video_folder=${workspaceFolder}/data/source_videos/",
                // "--video_folder=${workspaceFolder}/data/source_videos/tpose2.mp4",
                "--output_folder=${workspaceFolder}/data/holistic_data",
                "--log_level=INFO",
                "--model-complexity=2",
                "--frame_output_folder=${workspaceFolder}/temp/frames",
                // "--rewrite_existing",
            ],
        },
        {
            "name": "VideoPipeline (2): Convert to Joint Space",
            "type": "python",
            "request": "launch",
            "module": "motion_extraction.steptwo_convert_to_jointspace",
            "justMyCode": true,
            "args": [
                "--naocsv_output_folder=${workspaceFolder}/data/nao",
                "--bvh_output_folder=${workspaceFolder}/data/bvh",
                "--csv_output_folder=${workspaceFolder}/data/bvhcsv",
                "--log_level=INFO",
                "--frame_limit=-1",
                // "${workspaceFolder}/data/holistic_data/debbieallenchallenge.holisticdata.csv"
                // "${workspaceFolder}/data/holistic_data/tpose2.holisticdata.csv"
                // "${workspaceFolder}/data/holistic_data/ArmShuffle.holisticdata.csv"
                // "${workspaceFolder}/data/holistic_data/last-christmas-tutorial.holisticdata.csv"
                "${workspaceFolder}/data/holistic_data/mad-at-disney.holisticdata.csv"
                // "${workspaceFolder}/data/holistic_data/"
            ],
        },
        {
            "name": "Test: Visualize Pose",
            "type": "python",
            "request": "launch",
            "module": "motion_extraction.pose_visualization",
            "justMyCode": true,
            "args": [
                "--pose_file=${workspaceFolder}/data/holistic_data/supalonely.holisticdata.csv",
                "--hand_file=${workspaceFolder}/data/holistic_data/supalonely.holisticdata.csv",
            ],
        },
        {
            "name": "Test: Make Mecanim Humanoid",
            "type": "python",
            "request": "launch",
            "module": "motion_extraction.MecanimHumanoid",
            "justMyCode": true,
            "args": [
                "--skeleton_file=${workspaceFolder}/data/holistic_data/tpose2.holisticdata.csv",
            ],
        },
        {
            "name": "Encode Videos HEVC",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/motion_extraction/reencode_videos_hevc.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": [
                "--source_glob=C:/Users/julie/Desktop/standalone-video-uploads/*.webm",
                "--target_folder=C:/Users/julie/Desktop/vids_reencoded",
            ]
        },
        {

            "name": "View BVH",
            "type": "python",
            "request": "launch",
            "module": "motion_extraction.bvh.view_bvh",
            "args": [
                // "${workspaceFolder}/docs/walk_sample.bvh",
                // "-joint_angle_output=${workspaceFolder}/docs/walk_sample_joint_angles.csv",
                // "${workspaceFolder}/docs/minimal_bvh.bvh",
                // "-joint_angle_output=${workspaceFolder}/docs/minimal_bvh_joint_angles.csv",
                "${workspaceFolder}/data/jointspace_data/tpose2.bvh",
                "-joint_angle_output=${workspaceFolder}/data/jointspace_data/tpose2_bvhjointangles.csv",
                "-frame_time=4.5",
                "-repeat=1"
            ]
        },
        {
            "name": "View URDF",
            "type": "python",
            "request": "launch",
            "module": "motion_extraction.temp.view_urdf",
            "args": [
                "${workspaceFolder}/data/urdf/naoV50_generated_urdf/nao.urdf",        
            ]
        }
    ]
}