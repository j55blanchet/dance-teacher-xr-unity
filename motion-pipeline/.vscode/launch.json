    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Quick Script",
            "type": "python",
            "request": "launch",
            "module": "motion_extraction.quickscript",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "VideoPipeline (1): Get MP Holistic Data",
            "type": "python",
            "request": "launch",
            "module": "motion_extraction.stepone_get_holistic_data",
            "justMyCode": true,
            "args": [
                "--video_folder=${workspaceFolder}/data/source_videos",
                "--output_folder=${workspaceFolder}/data/holistic_data",
                "--log_level=INFO",
                "--model-complexity=2",
                "--frame_output_folder=${workspaceFolder}/temp/frames"
            ],
        },
        {
            "name": "VideoPipeline (2): Convert to Joint Space",
            "type": "python",
            "request": "launch",
            "module": "motion_extraction.steptwo_convert_to_jointspace",
            "justMyCode": true,
            "args": [
                "--output_folder=${workspaceFolder}/data/jointspace_data",
                "--log_level=INFO",
                "${workspaceFolder}/data/holistic_data/tpose2.holisticdata.csv"
            ],
        },
        {
            "name": "Test: Visualize Pose",
            "type": "python",
            "request": "launch",
            "module": "motion_extraction.pose_visualization",
            "justMyCode": true,
            "args": [
                "--pose_file=${workspaceFolder}/data/holistic_data/supalonely.holisticdata.csv",
                "--hand_file=${workspaceFolder}/data/holistic_data/supalonely.holisticdata.csv",
            ],
        },
        {
            "name": "Test: Make Mecanim Humanoid",
            "type": "python",
            "request": "launch",
            "module": "motion_extraction.MecanimHumanoid",
            "justMyCode": true,
            "args": [
                "--skeleton_file=${workspaceFolder}/data/holistic_data/tpose2.holisticdata.csv",
            ],
        },
        {
            "name": "Encode Videos HEVC",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/motion_extraction/reencode_videos_hevc.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": [
                "--source_glob=C:/Users/julie/Desktop/standalone-video-uploads/*.webm",
                "--target_folder=C:/Users/julie/Desktop/vids_reencoded",
            ]
        }
    ]
}