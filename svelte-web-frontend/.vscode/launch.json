{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}/src",
            "resolveSourceMapLocations": [
                "${workspaceFolder}/src",
                "!%{workspaceFolder}/node_modules/**"
            ]
        },
        {
            "type": "msedge",
            "request": "launch",
            "name": "Launch Edge against localhost",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}/src",
            "resolveSourceMapLocations": [
                "${workspaceFolder}/src",
                "!%{workspaceFolder}/node_modules/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Sync Storage Assets",
            "cwd": "${workspaceFolder}",
            "runtimeArgs": ["--experimental-modules"],
            "program": "${workspaceFolder}/scripts/syncStorageAssets.js",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Sync Storage Assets (dry run)",
            "cwd": "${workspaceFolder}",
            "runtimeArgs": ["--experimental-modules"],
            "args": ["--dry-run"],
            "program": "${workspaceFolder}/scripts/syncStorageAssets.js",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Sync Storage Assets PROD (dry run)",
            "cwd": "${workspaceFolder}",
            "runtimeArgs": ["--experimental-modules"],
            "args": ["--dry-run", "--production"],
            "program": "${workspaceFolder}/scripts/syncStorageAssets.js",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Sync Storage Assets PROD",
            "cwd": "${workspaceFolder}",
            "runtimeArgs": ["--experimental-modules"],
            "args": ["--production", "--async"],
            "program": "${workspaceFolder}/scripts/syncStorageAssets.js",
        }
    ]
}